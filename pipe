pipeline {
    agent any

    stages {
        stage('Begin') {
            steps {
                script {
                    echo 'Iniciando o pipeline'
                    currentBuild.description = env.STAGE_NAME

                    echo "Stage Name : ${env.STAGE_NAME}"
                    echo "Build Number : ${env.BUILD_NUMBER}"
                }
            }
        }

        stage('Full Testing') {
            options {
                lock('ios-device')
            }
            stages {
                stage('Install') {
                    steps {
                        echo 'Installing'
                        sleep(time: 5, unit: 'SECONDS')
                    }
                }
                stage('Test') {
                    steps {
                        echo 'Testing'
                        sleep(time: 5, unit: 'SECONDS')
                    }
                }
                stage('Report') {
                    steps {
                        script {
                            def testResultFile = './results.xml'
                            if (fileExists(testResultFile)) {
                                echo 'Test result found!'
                                junit testResults: testResultFile, skipPublishingChecks: true
                            } else {
                                echo 'No test result found!'
                            }
                        }
                        echo 'archiving artifacts'
                        archiveArtifacts artifacts: './results.xml', onlyIfSuccessful: true
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                def testResultFile = './results.xml'
                if (fileExists(testResultFile)) {
                    echo 'Test result found!'
                    def testResult = junit testResults: testResultFile, skipPublishingChecks: true
                    echo "Test Result: ${testResult.totalCount} total, ${testResult.passedCount} passed, ${testResult.failedCount} failed"
                } else {
                    echo 'No test result found!'
                }
            }
        }
    }
}
